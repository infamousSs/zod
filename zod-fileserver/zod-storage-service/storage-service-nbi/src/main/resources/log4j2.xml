<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" name="Zod-file-server" packages="com.infamous">
    <Appenders>
        <Console name="Stout">
            <PatternLayout
              pattern="%d{ISO8601} | %-5.5p | %16.16t | %48.48c | %m%n"
            />
        </Console>
        <ZodSocket name="Syslog" host="${sys:fluent.host:-localhost}" port="${sys:fluent.port:-5514}" protocol="TCP">
        </ZodSocket>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Syslog"/>
            <AppenderRef ref="Stout"/>
        </Root>
        <Logger name="com.atomikos" level="warn" additivity="true">
            <AppenderRef ref="Syslog"/>
        </Logger>
    </Loggers>
</Configuration>

